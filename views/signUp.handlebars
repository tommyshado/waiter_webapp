<form action="/registerwaiter" method="post">
  <nav class="bg-[#242424] py-2">
    <div class="flex flex-row">
      <div class="basis-1/4">
        <a href="/">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="40"
            height="40"
            fill="currentColor"
            class="bi bi-arrow-left-circle-fill fill-[#ffffff] hover:fill-[#5b5b5b]"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"
            />
          </svg>
        </a>
      </div>

      <div class="basis-1/2">
        <center>
          <h1 class="text-4xl font-bold">
            Waiters App | Roster App
          </h1>
        </center>
      </div>
    </div>
  </nav>
  <div class="py-2">
    <h2 class="text-2xl py-2"><strong>Register a waiter.</strong></h2>
    {{#if messages.error}}
      <div class="messages danger-messages py-2">{{messages.error}}</div>
    {{/if}}

    <div class="py-4">
      <label for="name"><strong>Waiter name</strong></label>

      <div>
        <input
          class="text-[#000000] bg-[#5b5b5b] focus:bg-white rounded-md border-2"
          name="name"
          type="text"
          placeholder="Enter your name"
          required
        />
      </div>
    </div>

    <div class="py-4" x-data="{show: true}">
      <label for="password"><strong>Create a password</strong></label>

      <div class="relative ">
        <input
          class="text-[#000000] bg-[#5b5b5b] focus:bg-white rounded-md border-2"
          name="password"
          type="password"
          placeholder="Create a password"
          required
        />
      </div>
    </div>

    <div class="py-12">
      <button class="text-[#242424] hover:text-[#000000] bg-[#ffffff] hover:bg-[#5b5b5b] buttons" type="submit">
        <strong>Register waiter</strong>
      </button>
    </div>
  </div>
</form>