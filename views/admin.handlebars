<form action="/days" method="get">
  <nav class="bg-[#242424] py-2">
    <div class="flex flex-row">
      <div class="basis-1/4">
        <form action="/logout" method="post">
          <button type="submit">Logout</button>
        </form>
      </div>

      <div class="basis-1/2">
        <center>
          <h1 class="text-4xl font-bold">
            Waiters App | Roster App
          </h1>
        </center>
      </div>
    </div>
  </nav>
  <div class="admin-page py-2 ">
    <h2 class="text-2xl py-2">Welcome to the Roster App</h2>

    {{#if messages.success}}
    <div class="messages success-messages py-2">
      {{messages.success}}
    </div>
    {{/if}}

    <div class="table-container py-2">
      <table class="table-auto">
        <thead>
          <tr>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
          </tr>
        </thead>

        <tbody>
          <tr class="">
            {{#each waiterNames}}
                {{#if className}}
                <td class="{{className}}">
                {{/if}}
                  <ul>
                  {{#each waiters}}
                  <form action="/days/{{this.id}}/{{this.day}}" method="post">
                    <li><button type="submit" onclick="return resetOnClick()">{{this.name}}</button></li>
                  </form>
                  {{/each}}
                  </ul>
                </td>
            {{/each}}
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</form>

<form action="/reset" method="post">
  <div class="py-6">
      <button class="text-[#242424] hover:text-[#000000] bg-[#ffffff] hover:bg-[#5b5b5b] buttons" type="submit" onclick="return resetOnClick()">Reset roster</button>
  </div>
</form>