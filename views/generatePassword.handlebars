<div class="login-page py-2">
  <h2 class="text-2xl py-2"><strong>Create a new password.</strong></h2>

  <form action="/updatePassword" method="post">
    {{#if messages.error}}
      <div class="messages danger-messages">
        {{messages.error}}
      </div>
    {{/if}}
    {{#if messages.success}}
      <div class="messages success-messages">{{messages.success}}</div>
    {{/if}}

    <div class="py-4">
      <label for="email-or-username"><strong>Enter your name</strong></label>
      <div>
        <input
          class="text-[#000000] bg-[#5b5b5b] focus:bg-white rounded-md border-2"
          name="name"
          type="text"
          placeholder="Enter your name"
          required
        />
      </div>
    </div>

    <div class="py-4" x-data="{ show: true }">
      <label for="password"><strong>New password</strong></label>
      <div class="relative">
        <input
          class="text-[#000000] bg-[#5b5b5b] focus:bg-white rounded-md border-2"
          name="newPassword"
          type="password"
          placeholder="Enter your password"
          required
        />
      </div>
    </div>

    <div class="py-12">
      <button
        class="bg-[#1ed760] hover:bg-[#0e923c] buttons"
        type="submit"
      ><strong>Create password</strong></button>
    </div>

  </form>
</div>